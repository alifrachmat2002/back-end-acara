  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "properties": {
          "identifier": {
            "type": "string",
            "example": "akunvercel"
          },
          "password": {
            "type": "string",
            "example": "password"
          }
        },
        "xml": {
          "name": "LoginRequest"
        }
      },
      "RegisterRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "alipalip"
          },
          "fullName": {
            "type": "string",
            "example": "Alif Rachmat Illahi"
          },
          "email": {
            "type": "string",
            "example": "myguyalip2@yopmail.com"
          },
          "password": {
            "type": "string",
            "example": "P4ssword"
          },
          "confirmPassword": {
            "type": "string",
            "example": "P4ssword"
          }
        },
        "xml": {
          "name": "RegisterRequest"
        }
      },
      "ActivationRequest": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "abcdef"
          }
        },
        "xml": {
          "name": "ActivationRequest"
        }
      },
      "CreateCategoryRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Training"
          },
          "description": {
            "type": "string",
            "example": "Training events to boost your skills."
          },
          "icon": {
            "type": "string",
            "example": "Example"
          }
        },
        "xml": {
          "name": "CreateCategoryRequest"
        }
      },
      "CreateEventRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Event Name"
          },
          "description": {
            "type": "string",
            "example": "event description."
          },
          "banner": {
            "type": "string",
            "example": "fileUrl"
          },
          "startDate": {
            "type": "string",
            "example": "yyyy-mm-dd hh:mm:ss"
          },
          "endDate": {
            "type": "string",
            "example": "yyyy-mm-dd hh:mm:ss"
          },
          "isFeatured": {
            "type": "boolean",
            "example": true
          },
          "isOnline": {
            "type": "boolean",
            "example": true
          },
          "isPublished": {
            "type": "boolean",
            "example": true
          },
          "category": {
            "type": "string",
            "example": "category ObjectId"
          },
          "location": {
            "type": "object",
            "properties": {
              "region": {
                "type": "string",
                "example": "region id"
              },
              "coordinates": {
                "type": "array",
                "example": [
                  0,
                  0
                ],
                "items": {
                  "type": "number"
                }
              },
              "address": {
                "type": "string",
                "example": "full address e.g Jl. Hatchi Hatchi Banyak Anak Kecil"
              }
            }
          }
